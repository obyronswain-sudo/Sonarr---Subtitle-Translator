# Sonarr Subtitle Translator Configuration
# Copy this file to .env and customize paths for your system

# Tool Paths (leave empty to use auto-detection)
MKVEXTRACT_PATH=
FFMPEG_PATH=
TESSERACT_PATH=

# API Configuration
DEEPL_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=subtitle-translator

# Translation Settings
DEFAULT_TARGET_LANG=pt-BR
CACHE_ENABLED=true
CACHE_MAX_ENTRIES=10000

# Quality Settings
MIN_TRANSLATION_RATIO=0.3
MIN_USEFUL_CHARS=100
ENABLE_LANGUAGE_DETECTION=true

# Performance Settings
MAX_TRANSLATION_WORKERS=4
CHUNK_SIZE=3
REQUEST_TIMEOUT=60
RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5